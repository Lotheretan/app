<h2 class="ui header">
  <i class="folder open icon"></i>
  <div class="content">
    {{model.identity}}
    <div class="sub header">{{model.descriptif}}</div>
  </div>
</h2>
<h3 class="ui header">Stories</h3>
{{#link-to "story.new" model.id class="ui button"}}
  <i class="ui plus icon"></i>
  Add Story in project...
{{/link-to}}
{{#link-to "developers" class="ui button"}}<i class="caret square left icon"></i>Back to developers{{/link-to}}
<div class="ui divider"></div>
<div class="ui middle aligned divided list">
  {{#each model.projects as |project|}}
    <div class="item">
      <div class="right floated content">
        <div class="ui left labeled button" tabindex="0">
          <a class="ui basic right pointing label">
            {{project.developer.identity}}
          </a>
          <div>
            {{#link-to "story.update" project.id class="ui button"}}<i class="user icon"></i> Update...{{/link-to}}
          </div>
        </div>
      </div>
      <i class="big file middle aligned icon"></i>
      <div class="content">
        <div class="header">
          {{project.name}}
        </div>
        <div class="description">
          {{project.description}}
          {{project.story.code}}
          {{#each story.tags as |tag|}}
            <a class="ui {{tag.color}} label">{{tag.title}}</a>
          {{/each}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
{{outlet}}